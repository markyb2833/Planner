{
  "name": "planner",
  "version": "1.0.0",
  "description": "Visual collaborative planner with real-time updates",
  "main": "server/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup-db": "node setup_database.js",
    "start": "node server/index.js",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "build": "npm run client:install && npm run client:build",
    "dev": "concurrently \"npm run server:dev\" \"cd client && npm start\"",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "planner",
    "collaboration",
    "real-time",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.9.1",
    "nodemailer": "^6.9.9",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
